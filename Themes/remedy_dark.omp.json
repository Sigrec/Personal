{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": { "cache_duration": "none" },
          "template": "<#f7e0b4></>{{ .UserName }}@{{ .HostName }}",
          "foreground": "#A54242",
          "type": "session",
          "style": "plain"
        },
        {
          "properties": {
            "cache_duration": "none",
            "mapped_shell_names": {
              "bash": "Bash",
              "cmd": "Cmd",
              "powershell": "Shell",
              "pwsh": "Shell"
            }
          },
          "template": "<#f7e0b4> ❚ </>\ue795 {{ .Name }}",
          "foreground": "#8C9440",
          "type": "shell",
          "style": "plain"
        },
        {
          "type": "time",
          "style": "plain",
          "foreground": "#B294BB",
          "properties": {
            "format": "2006-01-02 15:04:05",
            "cache_duration": "1s"
          },
          "template": "<#f7e0b4> ❚ </>\uf017 {{ .CurrentDate | date .Format }}"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "kubectl",
          "style": "plain",
          "foreground": "#DE935F",
          "properties": { "parse_kubeconfig": true },
          "template": "\uf308 {{ .Context }}{{ if .Namespace }}::{{ .Namespace }}{{ end }}"
        },
        {
          "type": "command",
          "style": "plain",
          "foreground": "#DE935F",
          "properties": {
            "shell": "pwsh",
            "command": "kubectl config view --minify -o jsonpath='{.clusters[0].cluster.server}'",
            "cache_duration": "5m",
            "interpret": false
          },
          "template": "<#f7e0b4> ❚ </> \uf0C1 {{ .Output }}"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "properties": { "cache_duration": "none" },
          "template": " x{{ reason .Code }}",
          "foreground": "#8C9440",
          "type": "status",
          "style": "plain",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#E06C75{{ end }}"
          ]
        },
        {
          "properties": {
            "always_enabled": true,
            "cache_duration": "none",
            "style": "roundrock"
          },
          "template": " {{ .FormattedMs }} ",
          "foreground": "#8C9440",
          "type": "executiontime",
          "style": "diamond",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#E06C75{{ end }}"
          ]
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "properties": {
            "branch_max_length": 25,
            "cache_duration": "none",
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true
          },
          "template": "<#f7e0b4></>{{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }}",
          "foreground": "#FF4500",
          "type": "git",
          "style": "plain",
          "foreground_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}#DE935F{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}#8ABEB7{{ end }}",
            "{{ if gt .Ahead 0 }}#B294BB{{ end }}",
            "{{ if gt .Behind 0 }}#B294BB{{ end }}"
          ]
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": {
            "cache_duration": "none",
            "style": "full"
          },
          "template": "\ue5ff {{ .Path }}",
          "foreground": "#707880",
          "type": "path",
          "style": "plain"
        }
      ],
      "newline": true
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "properties": { "cache_duration": "none" },
          "template": "!",
          "foreground": "#B294BB",
          "type": "root",
          "style": "plain"
        },
        {
          "properties": { "cache_duration": "none" },
          "template": "❯",
          "foreground": "#B294BB",
          "type": "text",
          "style": "plain"
        }
      ],
      "newline": true
    }
  ],
  "version": 3,
  "final_space": true
}